{
  "name": "samuel-netocny",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run watch",
    "lite": "lite-server",
    "lite:c": "lite-server --c bs-chrome.json",
    "build:sass": "node-sass --output-style expanded ./styles.scss -r -o ./ & node-sass ./app -r -o ./app",
    "watch:sass": "node-sass --output-style expanded ./ -wr -o ./",
    "watch": "npm run build:sass & concurrently \"npm run watch:sass\" \"npm run lite:c\""
  },
  "dependencies": {
    "@angular/common": "~2.1.0",
    "@angular/compiler": "~2.1.0",
    "@angular/core": "~2.1.0",
    "@angular/forms": "~2.1.0",
    "@angular/http": "~2.1.0",
    "@angular/platform-browser": "~2.1.0",
    "@angular/platform-browser-dynamic": "~2.1.0",
    "@angular/router": "~3.1.0",
    "@angular/upgrade": "~2.1.0",
    "core-js": "^2.4.1",
    "ng2-page-slider": "^0.8.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "systemjs": "0.19.39",
    "zone.js": "^0.6.25"
  },
  "devDependencies": {
    "concurrently": "^3.0.0",
    "lite-server": "^2.2.2",
    "node-sass": "^3.10.1",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-uglify": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^1.0.2"
  }
}
