{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": ".",
        "paths": {
            "@meta/*": ["node_modules/ng2-meta/dist/*"],
            "@modal": ["node_modules/ng2-modal/index"],
            "@dragula/*": ["node_modules/ng2-dragula/*"]
        },
        "outDir": "."
    },
    "files": [
        "node_modules/reflect-metadata/Reflect.d.ts",
        "app/app.module.ts",
        "app/main.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}